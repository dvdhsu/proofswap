<%= javascript_include_tag "registration" %>
<div class="row">
  <div class="col-sm-8">
    <h1>Sign up</h1>

    <%= form_for(resource, :as => resource_name,
    :url => registration_path(resource_name),
    :html => { :role => "form" }) do |f| %>

      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %> <i><small>(must be from Oxford) </small></i>
        <div class="row">
          <div class="col-sm-8">
            <%= f.email_field :email, required: true,
              pattern: "(.+)@(.+)\\.ox\\.ac\\.uk", title: "E-mail must be from Oxford",
              class: "form-control", id:"emailField" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :first_name %>
        <div class="row">
          <div class="col-sm-8">
            <%= f.text_field :first_name, required: true, class: "form-control", id:"firstNameField" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <div class="row">
          <div class="col-sm-8">
            <%= f.text_field :last_name, required: true, class: "form-control", id:"lastNameField" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :college %>
        <div class="row">
          <div class="col-sm-8">
            <%= f.select(:college, options_for_college, {},  {required: true, class: "form-control"})%>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-8">
            <%= f.label :password %>
            <%= f.password_field :password, required: true, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-8">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, required: true, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-8">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>


      <%= render "devise/shared/links" %>

    </div>
  </div>
